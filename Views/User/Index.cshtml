@using Auction.Controllers;
@model List<Auction.Models.Biddings>
@inject AuctionsController AuctionsController
<!--============= Hero Section Starts Here =============-->
<div class="hero-section style-2 pb-lg-400">
    <div class="container">
    </div>
    <div class="bg_img hero-bg bottom_center" data-background="@Url.Content("~/images/banner/hero-bg.png")"></div>
</div>
<!--============= Hero Section Ends Here =============-->
<section class="dashboard-section padding-bottom mt--240 mt-lg--325 pos-rel">
    <div class="container">
        <div class="row justify-content-center">
            <partial name="_UserPartial" />
            <div class="col-lg-8">
                <div class="dashboard-widget mb-40">
                    <div class="dashboard-title mb-30">
                        <h5 class="title">My Activity</h5>
                    </div>
                    <div class="row justify-content-center mb-30-none">
                        <div class="col-md-4 col-sm-6">
                            <div class="dashboard-item">
                                <div class="thumb">
                                    <img src="~/images/dashboard/01.png" alt="dashboard">
                                </div>
                                <div class="content">
                                    <h2 class="title"><span class="counter">@(ViewData["mybids"])</span></h2>
                                    <h6 class="info">Total Bids</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="dashboard-item">
                                <div class="thumb">
                                    <img src="~/images/dashboard/02.png" alt="dashboard">
                                </div>
                                <div class="content">
                                    <h2 class="title"><span class="counter">@(ViewData["mywins"])</span></h2>
                                    <h6 class="info">Items Won</h6>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="dashboard-item">
                                <div class="thumb">
                                    <img src="~/images/dashboard/03.png" alt="dashboard">
                                </div>
                                <div class="content">
                                    <h2 class="title"><span class="counter">@(ViewData["myauctions"])</span></h2>
                                    <h6 class="info">My Auctions</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-widget">
                    <h5 class="title mb-10">Bidding</h5>
                    <div class="dashboard-purchasing-tabs">
                        <ul class="nav-tabs nav">

                            <li>
                                <a href="#current" class="active"  data-toggle="tab">History</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane show active fade" id="current">
                                <table class="purchasing-table">
                                    <thead>
                                    <th>Item</th>
                                    <th>Base Price</th>
                                    <th>Highest Bid</th>
                                    <th>Lowest Bid</th>
                                    <th>My Bid</th>
                                    <th>Expires</th>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                            <tr>
                                                  <td data-purchase="item">@(AuctionsController.GetTitleogItem(item.goodid))</td>
                                            <td data-purchase="bid price">$@(AuctionsController.GetStartingPrice(item.goodid))</td>
                                                <td data-purchase="highest bid">$@(AuctionsController.GetHighestBidAmount(item.goodid))</td>
                                                <td data-purchase="lowest bid">$@(AuctionsController.GetLowestBidAmount(item.goodid))</td>
                                                <td data-purchase="lowest bid">$@item.BidAmount</td>
                                                <td data-purchase="expires">@(AuctionsController.GetExpiry(item.goodid))</td>
                                           </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
