@model IEnumerable<Auction.Data.ApplicationUser>

<!--============= Hero Section Starts Here =============-->
<div class="hero-section style-2">
    <div class="container">
        <h2 class="text-center text-white">
            Users
        </h2>
    </div>
    <div class="bg_img hero-bg bottom_center" data-background="@Url.Content("~/images/banner/hero-bg.png")"></div>
</div>
<!--============= Hero Section Ends Here =============-->


<section class="dashboard-section padding-bottom mt--240 mt-lg--440 pos-rel">
    <div class="container">
        <div class="row justify-content-center">
            <p class="text-center text-white">
               User Mangement
            </p>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                      Username
                                    </th>
                                    <th>
                                       Email
                                    </th>

                                    <th>
                                     Phone  
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (@item.Name == null)
                                            {
                                                <p>Null</p>
                                            }
                                            @if (@item.Name != null)
                                            {
                                                <p>@item.Name</p>
                                            }
                                        </td>
                                        <td>
                                           @item.Email
                                        </td>

                                        <td>
                                            @if (@item.PhoneNumber == null)
                                            {
                                             <p>Null</p> 
                                            }
                                            @if (@item.PhoneNumber != null)
                                            {
                                                <p>@item.PhoneNumber</p>
                                            }
                                            
                                        </td>
                                        <td>
                                            @item.userdef
                                        </td>
                                        @if(item.userdef == "active")
                                        {
                                          <td>
                                                <a asp-action="ChangeStatus" asp-route-id="@item.Id" asp-controller="User" class="btn btn-danger">Block</a>
                                          </td>  
                                        }
                                        @if (item.userdef != "active")
                                        {
                                            <td>
                                                <a asp-action="Unblock" asp-route-id="@item.Id" asp-controller="User" class="btn btn-success">Unblock</a>
                                            </td>
                                        }

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>