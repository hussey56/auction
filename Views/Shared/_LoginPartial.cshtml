@using Auction.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <ul class="cart-button-area">

    <li >
            <a class="user-button" asp-action="Index" asp-controller="User" title="Manage">
                <i class="flaticon-user"></i>
        </a>
 
    </li>
    <li>
            <a class="text-light" asp-action="Index" asp-controller="User">
                @User.Identity.Name
          </a> 
    </li>
    <li>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="custom-button white">Logout</button>
        </form>
    </li>
    </ul>
}
else
{
     <ul class="cart-button-area">
       
  
        
            <li>
            <a class="ml-2 d-none d-sm-inline-block" asp-area="Identity" asp-page="/Account/Register" style="color:white;">Register</a>
            </li>
            <li>
            <a class="ml-2 d-none d-sm-inline-block" asp-area="Identity" asp-page="/Account/Login" style="color:white;">Login</a>
            </li>
        </ul>
}


