@model IEnumerable<Auction.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<!--============= Hero Section Starts Here =============-->
<div class="hero-section style-2">
    <div class="container">
        <h2 class="text-center text-white">
            Categories
        </h2>
    </div>
    <div class="bg_img hero-bg bottom_center" data-background="@Url.Content("~/images/banner/hero-bg.png")"></div>
</div>
<!--============= Hero Section Ends Here =============-->

<section class="dashboard-section padding-bottom mt--240 mt-lg--440 pos-rel">
    <div class="container">
        <div class="row justify-content-center">
            <p class="text-center ">
                <a class="text-white" asp-action="Create">Create New</a>
            </p>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

<table class="table">
    <thead>
        <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
         
                                    <th>
                                        @Html.DisplayNameFor(model => model.utype)
                                    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.utype)
                                        </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                            @if (item.utype == "temporary")
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                            }
            </td>
        </tr>
}
    </tbody>
</table>
                    </div>

</div>
</div>
</div>
</div>
</section>